import sys
import math

def factoring(n):
    for i in range(2, int(math.sqrt(n)) + 1):
        if n % i == 0:
            return (n/i, i)

if __name__ == "__main__":
    if len(sys.argv != 2):
        print("Usage: factor <file>")
        sys.exit(1)
    
    file = sys.argv[1]
    with open(file, "r") as nums:
        lines = nums.readlines()

    for line in lines:
        num = line.strip()
        if num:
            p, q = factoring(num)
            print(f"{num}={p}*{q}")